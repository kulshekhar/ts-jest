{
  "dependencies": {
    "react": "^17.0.2"
  },
  "jest": {
    "automock": true,
    "globals": {
      "ts-jest": {
        "diagnostics": false,
        "tsconfig": {
          "allowJs": true
        }
      }
    },
    "roots": ["<rootDir>", "<rootDir>/../__tests__"],
    "moduleNameMapper": {
      "react$": "<rootDir>/node_modules/react"
    },
    "transform": {
      "^.+\\.[tj]sx?$": "<rootDir>/../../../../dist/index.js"
    }
  }
}

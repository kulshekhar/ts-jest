{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "declarationDir": "./lib",
    "outDir": "./lib",
    "downlevelIteration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "incremental": true
  },
  "include": [
    "./src"
  ]
}

{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noEmit": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": false,
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}

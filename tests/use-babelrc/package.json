{
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "../../preprocessor.js"
		},
		"moduleDirectories": [
			"node_modules",
			"src"
		],
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json"
		],
		"globals": {
			"ts-jest": {
				"useBabelrc": true
			}
		}
	}
}

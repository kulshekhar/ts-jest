{
	"jest": {
		"transform": {
			".(ts|tsx)": "ts-jest"
		},
		"moduleDirectories": [
			"node_modules",
			"src"
		],
		"testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js"
		],
		"globals": {
			"ts-jest": {
				"babelConfig": {
					"presets": [
						"env"
					]
				}
			}
		}
	}
}
